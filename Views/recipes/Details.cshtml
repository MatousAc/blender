@model blender.Models._recipe

@{
    ViewBag.Title = "Details";
    ViewBag.extrascript = "features.js";
}

<h2>Details</h2>

<div>
    <h4>recipe</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.instructions)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.instructions)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.prep_mins)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.prep_mins)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.cook_mins)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cook_mins)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.calories)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.calories)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.image_url)
        </dt>

        <dd>
            <img src="@Model.image_url" alt="@Model.name" width="100px">
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.skill_level)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.skill_level)
        </dd>

        <td>
            @foreach (var category in Model.categories)
            {
                @Html.ActionLink(@category, "../categories/Details", new { id = category })
            }
        </td>

        <dt>
            @Html.DisplayNameFor(model => model.serves)
        </dt>

        <dd>
            @Html.EditorFor(model => model.serves)
        </dd>
        <button onclick="loadNewServings()">Adjust</button>

        <td>
            @foreach (string requirement in ViewData["_requires"].ToString().Split('@'))
            {
                <span>
                    @foreach (string aui in requirement.Split('%'))
                    {
                        <span>
                            @aui
                        </span>
                    }
                </span>
            }
        </td>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.recipe_id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
